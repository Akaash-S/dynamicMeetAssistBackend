# AI Meeting Assistant Backend - Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Neon PostgreSQL Database URL
# Format: postgresql://username:password@host:5432/database
NEON_DATABASE_URL=postgresql://username:password@ep-example-123456.us-east-1.aws.neon.tech/neondb

# Database Connection Pool Settings
DB_MIN_CONNECTIONS=1
DB_MAX_CONNECTIONS=20

# ===========================================
# STORAGE CONFIGURATION
# ===========================================
# Supabase Storage Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-supabase-anon-key-here

# ===========================================
# AI SERVICES CONFIGURATION
# ===========================================
# RapidAPI Key for Speech-to-Text Service
RAPIDAPI_KEY=your-rapidapi-key-here

# Google Gemini AI API Key
GEMINI_API_KEY=your-gemini-api-key-here

# ===========================================
# FLASK CONFIGURATION
# ===========================================
# Flask Secret Key (generate a secure random string)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Flask Environment (development/production)
FLASK_ENV=development

# Server Port
PORT=5000

# ===========================================
# EMAIL SERVICE CONFIGURATION (Optional)
# ===========================================
# SMTP Configuration for email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_ADDRESS=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
FROM_NAME=AI Meeting Assistant

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Maximum file upload size in bytes (default: 100MB)
MAX_FILE_SIZE=104857600

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=mp3,wav,m4a,mp4,webm

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:8080,http://localhost:3000

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/meeting_assistant.log

# ===========================================
# SETUP INSTRUCTIONS
# ===========================================
# 1. Copy this file: cp env.example .env
# 2. Fill in all the required values above
# 3. For production, ensure all secrets are properly secured
# 4. Never commit the .env file to version control
#
# Required Services Setup:
# - Neon Database: https://neon.tech/
# - Supabase Storage: https://supabase.com/
# - RapidAPI: https://rapidapi.com/
# - Google AI Studio: https://makersuite.google.com/
#
# Optional Services:
# - Gmail SMTP: Use App Passwords for authentication
